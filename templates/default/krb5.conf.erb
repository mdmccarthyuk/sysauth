[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = <%= node[:sysauth][:krb5][:realm] %>
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true

[realms]
 <%= node[:sysauth][:krb5][:realm] %> = {
  kdc = <%= node[:sysauth][:krb5][:kdc] %>
  admin_server = <%= node[:sysauth][:krb5][:kadmin] %>
 }

